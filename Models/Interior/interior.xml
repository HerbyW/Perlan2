<?xml version="1.0"?>
<PropertyList>
    <path>interior-perlan-04.ac</path>
    <!--COCKPIT-->
    <!-- Yaw string -->
    <model>
        <name>yawstring</name>
        <path>Aircraft/Perlan2/Models/Interior/Panel/Instruments/wool-thread/wool-thread.xml</path>
        <offsets>
            <x-m>-3.43276</x-m>
            <y-m> 0</y-m>
            <z-m>0.88</z-m>
            <pitch-deg>22</pitch-deg>
        </offsets>
    </model>
    <model>
        <name>yawstring2</name>
        <path>Aircraft/Perlan2/Models/Interior/Panel/Instruments/wool-thread/wool-thread.xml</path>
        <offsets>
            <x-m>-2.22</x-m>
            <y-m> 0</y-m>
            <z-m>1.18</z-m>
            <pitch-deg>40</pitch-deg>
        </offsets>
    </model>
    <model>
        <name>panelF</name>
        <path>Aircraft/Perlan2/Models/Interior/Panel/panelF.xml</path>
	<offsets>
            <x-m>0.59</x-m>
            <y-m> 0</y-m>
            <z-m>0.120</z-m>
            <pitch-deg>0</pitch-deg>
        </offsets>
    </model>
    <model>
        <name>panelR</name>
        <path>Aircraft/Perlan2/Models/Interior/Panel/panelR.xml</path>
	<offsets>
            <x-m>0.85</x-m>
            <y-m> 0</y-m>
            <z-m>0.0</z-m>
            <pitch-deg>0</pitch-deg>
        </offsets>
    </model>
    <!--Pilots
    <model>
        <name>pilots</name>
        <path>Aircraft/Perlan2/Models/Interior/Pilots/pilots.xml</path>
    </model>-->
    
    <!--Airbrake Handle-->
    <animation>
        <type>slider</type>
        <object-name>airbrake-front</object-name>
        <object-name>airbrake-rear</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/flight/spoilers</property>
                <factor>0.05</factor>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>airbrake</tooltip-id>
                <label>%s</label>
                <mapping>nasal</mapping>
                <property>controls/flight/spoilers</property>
                <script>
                    return sprintf("Speedbrake %d%% out", 100-arg[0]*100);
                </script>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>airbrake-front</object-name>
        <property>controls/flight/spoilers</property>
        <factor>1</factor>
        <interpolation>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>.21</dep>
            </entry>
        </interpolation>
        <axis>
            <x1-m>-3.10624</x1-m>
            <y1-m>-0.24893</y1-m>
            <z1-m>0.47521</z1-m>
            <x2-m>-2.81179</x2-m>
            <y2-m>-0.27476</y2-m>
            <z2-m>0.53454</z2-m>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>airbrake-rear</object-name>
        <property>controls/flight/spoilers</property>
        <interpolation>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>.21</dep>
            </entry>
        </interpolation>
        <axis>
            <x1-m>-2.17081</x1-m>
            <y1-m>-0.27942</y1-m>
            <z1-m>0.58221</z1-m>
            <x2-m>-1.87227</x2-m>
            <y2-m>-0.29</y2-m>
            <z2-m>0.62263</z2-m>
        </axis>
    </animation>

    <!--Trim Handle Front-->

    <animation>
        <type>slider</type>
        <object-name>trim-front</object-name>
        <visible>true</visible>
        <drag-direction>vertical</drag-direction>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                        <property>controls/flight/elevator-trim</property>
            <factor>0.025</factor>
            <min>-1</min>
            <max>1</max>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <label>Elevator Trim: %3d%%</label>
                <measure-text>Elevator Trim: 100%</measure-text>
                <tooltip-id>trim-front</tooltip-id>
                <mapping>percent</mapping>
                <property>controls/flight/elevator-trim</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>trim-front</object-name>
        <property>controls/flight/elevator-trim</property>
        <factor>10</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>-3.13763</x-m>
            <y-m>0.0</y-m>
            <z-m>0.37503</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>
    <!--Trim Indicator Front-->
    <animation>
        <type>textranslate</type>
        <object-name>trim.ind.f</object-name>
        <object-name>trim.ind.r</object-name>
        <property>controls/flight/elevator-trim</property>
        <factor>0.09</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <!--Trim Handle Rear-->
    <animation>
        <type>slider</type>
        <object-name>trim-rear</object-name>
        <visible>true</visible>
        <drag-direction>vertical</drag-direction>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                        <property>controls/flight/elevator-trim</property>
            <factor>0.025</factor>
            <min>-1</min>
            <max>1</max>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <label>Elevator Trim: %3d%%</label>
                <measure-text>Elevator Trim: 100%</measure-text>
                <tooltip-id>trim-rear</tooltip-id>
                <mapping>percent</mapping>
                <property>controls/flight/elevator-trim</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>trim-rear</object-name>
        <property>controls/flight/elevator-trim</property>
        <factor>10</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>-2.00266</x-m>
            <y-m>0.0</y-m>
            <z-m>0.40279</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>
    <!--PushToTalk Front--> 
    <animation>
        <type>pick</type>
        <object-name>ptt-front</object-name>
        <object-name>ptt-rear</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/instrumentation/comm[0]/ptt</property>
            </binding>
            <mod-up>
                <binding>
                    <command>property-toggle</command>
                    <property>/instrumentation/comm[0]/ptt</property>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>ptt</tooltip-id>
                <label>Push to talk: %s</label>
                <mapping>on-off</mapping>
                <property>/instrumentation/comm[0]/ptt</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>ptt-front</object-name>
        <property>/instrumentation/comm[0]/ptt</property>
        <factor>-0.003</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>ptt-rear</object-name>
        <property>/instrumentation/comm[0]/ptt</property>
        <factor>-0.003</factor>
        <axis>
            <x>0.1</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>
    <!--Release Cable-->
    <animation>
        <type>pick</type>
        <object-name>releasecable-front</object-name>
        <object-name>releasecable-rear</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
                <binding>
                    <command>property-assign</command>
                    <property>/sim/hitches/hook-open</property>
                    <value type="bool">true</value>
                </binding>
                <binding>
                    <command>property-assign</command>
                    <property>/sim/hitches/aerotow/open</property>
                    <value type="bool">true</value>
                </binding>
                <binding>
                    <command>property-assign</command>
                    <property>/sim/hitches/winch/open</property>
                    <value type="bool">true</value>
                </binding>
                <mod-up>
                    <binding>
                        <command>property-assign</command>
                        <property>/sim/hitches/hook-open</property>
                        <value type="bool">false</value>
                    </binding>
                </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>hooks</tooltip-id>
                <label>Hooks: %s</label>
                <mapping>open-close</mapping>
                <property>/sim/hitches/hook-open</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>releasecable-front</object-name>
        <object-name>releasecable-rear</object-name>
        <property>/sim/hitches/hook-open</property>
        <factor>0.02</factor>
        <axis>
            <x>1</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
    <!--stick front-->
    <animation>
        <type>rotate</type>
        <object-name>stick-front</object-name>
        <object-name>trim-front</object-name>
        <object-name>ptt-front</object-name>
        <property>controls/flight/elevator</property>
        <factor>10</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>-3.137</x-m>
            <y-m>0.0</y-m>
            <z-m>0.34858</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>stick-front</object-name>
        <object-name>trim-front</object-name>
        <object-name>ptt-front</object-name>
        <property>controls/flight/aileron</property>
        <factor>10</factor>
        <offset>0</offset>
        <center>
            <x-m>-3.137</x-m>
            <y-m>0.0</y-m>
            <z-m>0.34858</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <!--stick rear-->
    <animation>
        <type>rotate</type>
        <object-name>trim-rear</object-name>
        <object-name>stick-rear</object-name>
        <object-name>ptt-rear</object-name>
        <property>controls/flight/elevator</property>
        <factor>10</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>-1.99529</x-m>
            <y-m>0.0</y-m>
            <z-m>0.38177</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>trim-rear</object-name>
        <object-name>stick-rear</object-name>
        <object-name>ptt-rear</object-name>
        <property>controls/flight/aileron</property>
        <factor>10</factor>
        <offset>0</offset>
        <center>
            <x-m>-1.99529</x-m>
            <y-m>0.0</y-m>
            <z-m>0.38177</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>    
    
    <!--Cockpit Shader-->
    <effect>
        <inherits-from>Aircraft/ASK21/Models/Effects/interior-shadow</inherits-from>
        <object-name>interiorF</object-name>
        <object-name>seatF</object-name>
        <object-name>canopy.front.left</object-name>
        <object-name>canopy.front.right</object-name>
        <object-name>stick-front</object-name>
        <object-name>trim-front</object-name>
        <object-name>releasecable-front</object-name>
        <object-name>placards.front</object-name>
        <object-name>seatF.cushion</object-name>
        <object-name>armrestL</object-name>
        <object-name>armrestR</object-name>
        <object-name>armrest.L2</object-name>
        <object-name>armrest.R2</object-name>
        <object-name>screws</object-name>
    </effect>
    <effect>
        <inherits-from>Aircraft/ASK21/Models/Effects/interior-shadow-back</inherits-from>
        <object-name>interiorR</object-name>
        <object-name>seatR</object-name>
        <object-name>canopy.rear.left</object-name>
        <object-name>canopy.rear.right</object-name>
        <object-name>canopy.rear.bars</object-name>
        <object-name>stick-rear</object-name>
        <object-name>trim-rear</object-name>
        <object-name>placards.rear</object-name>
        <object-name>seatR.cushion</object-name>
        <object-name>armrestRL</object-name>
        <object-name>armrestRR</object-name>
    </effect>

</PropertyList>
